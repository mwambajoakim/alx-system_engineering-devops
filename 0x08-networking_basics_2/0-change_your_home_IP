#!/usr/bin/env bash
# This script configures network interfaces
# localhost 127.0.0.2
# facebook.com 8.8.8.8

set -e

cp /etc/hosts /etc/hosts.bak

# Remove existing entries for localhost and facebook.com to avoid duplicates
sed -i '/127\.0\.0\.1\s\+localhost/d' /etc/hosts
sed -i '/facebook\.com/d' /etc/hosts
sed -i '/127\.0\.0\.2\s\+localhost/d' /etc/hosts

# Add custom resolution for localhost and facebook.com
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
